---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import postagem 1.1.png from '../public';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<img src="/postagem 1.1.png" width="50px">
			<p>
				Meu nome é Linttreen e eu sou estudante de Sistemas de Informação e de Marketing Digital. 
				Esse blog servirá como um diário para minha jornada de aprendizados.
			</p>
		</main>
		<Footer />
	</body>
</html>
